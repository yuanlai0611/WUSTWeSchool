<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pager_course">

    <!--模仿课程表的界面-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/title_rl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/switchWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:drawableRight="@drawable/switchweek_ic"
                    android:gravity="center"
                    android:text="第一周"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/course_setting"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/sub_medium_spacing"
                    android:padding="@dimen/scroll_bar_size"
                    android:src="@drawable/course_setting_image" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <!--显示星期-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/big_spacing"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.06"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周一" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周二" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周三" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周四" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周五" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周六" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="周日" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6f2f4" />
        <!--显示课表详细信息-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--显示多少节课-->
                <LinearLayout
                    android:layout_width="@dimen/status_height"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/course_left_bg"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="@dimen/small_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/course_left_bg"
                        android:gravity="center"
                        android:text="2"
                        android:textSize="@dimen/small_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/course_left_bg"
                        android:gravity="center"
                        android:text="3"
                        android:textSize="@dimen/small_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/course_left_bg"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="@dimen/small_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/course_left_bg"
                        android:gravity="center"
                        android:text="5"
                        android:textSize="@dimen/small_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/course_left_bg"
                        android:gravity="center"
                        android:text="6"
                        android:textSize="@dimen/small_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/course_left_bg"
                        android:gravity="center"
                        android:text="7"
                        android:textSize="@dimen/small_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/course_left_bg"
                        android:gravity="center"
                        android:text="8"
                        android:textSize="@dimen/small_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/course_left_bg"
                        android:gravity="center"
                        android:text="9"
                        android:textSize="@dimen/small_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/course_left_bg"
                        android:gravity="center"
                        android:text="10"
                        android:textSize="@dimen/small_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/course_left_bg"
                        android:gravity="center"
                        android:text="11"
                        android:textSize="@dimen/small_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="1dp"
                        android:background="@color/course_left_bg"
                        android:gravity="center"
                        android:text="12"
                        android:textSize="@dimen/small_text" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/card_elevation"
                    android:layout_height="match_parent"
                    android:background="#f5f5f5" />

                <GridView
                    android:id="@+id/courceDetail"
                    android:layout_width="match_parent"
                    android:layout_height="684dp"
                    android:background="#eef8fa"
                    android:fadeScrollbars="true"
                    android:horizontalSpacing="1dp"
                    android:numColumns="7"
                    android:scrollbars="none"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="1dp">

                </GridView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
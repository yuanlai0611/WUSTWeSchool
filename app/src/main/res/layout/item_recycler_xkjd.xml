<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <LinearLayout
        android:id="@+id/g_xkjd_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/selector_selectbtn">

        <TextView
            android:id="@+id/g_xklb"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            tools:text="类别：公共选修课"
            android:gravity="center"
            android:textColor="@color/colorBlack"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/colorOrange"
            android:layout_margin="@dimen/scroll_bar_size"/>
        <TextView
            android:id="@+id/g_xkjd"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:gravity="center|start"
            tools:text="阶段：二选"/>
        <TextView
            android:id="@+id/g_xkkssj"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center|start"
            android:textSize="12sp"
            tools:text="开始：2018-01-26 14:30"/>
        <TextView
            android:id="@+id/g_xkjzsj"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:gravity="center|start"
            tools:text="结束：2017-02-28 14:30"/>
        <TextView
            android:id="@+id/g_xnmc"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:gravity="center|start"
            tools:text="学期：2017-2018-2"/>

    </LinearLayout>



</android.support.v7.widget.CardView>